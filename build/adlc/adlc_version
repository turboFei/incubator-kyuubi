set -o pipefail
set -e
set -x

export LC_ALL=C

KYUUBI_HOME="$(cd "`dirname "$0"`/../.."; pwd)"
cd $KYUUBI_HOME

VERSION=$(build/mvn help:evaluate -Dexpression=project.version 2>/dev/null| grep -v "INFO"| grep -v "WARNING"| tail -n 1)

if [[ "$1" == "--replace" ]]; then
  sed -i '' 's/^LABEL com.ebay.adi.adlc.tag=.*\"/LABEL com.ebay.adi.adlc.tag=\"'${VERSION}'\"/g' Dockerfile
  exit 0
fi

ADLC_TAG_VERSION=$(grep com.ebay.adi.adlc.tag Dockerfile|awk -F '=' '{print $2}'|tr -d '"')

if [[ $VERSION != $ADLC_TAG_VERSION ]]; then
  echo "The project version and ADLC tag version do not match."
  echo "VERSION[$VERSION], ADLC tag version[$ADLC_TAG_VERSION]"
  echo "To update the ADLC version, run './build/adlc/adlc_version --replace'."
  exit 1
fi
