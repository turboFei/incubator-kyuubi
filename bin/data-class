## Kyuubi Data API Entrance
export KYUUBI_HOME="$(cd "$(dirname "$0")"/..; pwd)"

. "${KYUUBI_HOME}/bin/load-kyuubi-env.sh" -s

if [[ -z ${JAVA_HOME} ]]; then
  echo "Error: JAVA_HOME IS NOT SET! CANNOT PROCEED."
  exit 1
fi

RUNNER="${JAVA_HOME}/bin/java"

# Append jline option to enable the Data process to run in background.
if [[ ( ! $(ps -o stat= -p $$) =~ "+" ) && ! ( -p /dev/stdin ) ]]; then
  export KYUUBI_DATA_OPTS="$KYUUBI_DATA_OPTS -Djline.terminal=jline.UnsupportedTerminal"
fi

## Find the Kyuubi data Jar
if [[ -z "$KYUUBI_DATA_JARS" ]]; then
  KYUUBI_DATA_JARS="$KYUUBI_HOME/data-jars"
  if [[ ! -d ${KYUUBI_DATA_JARS} ]]; then
    echo -e "\nCandidate Kyuubi data jars $KYUUBI_DATA_JARS doesn't exist, using $KYUUBI_HOME/kyuubi-data/target/"
    KYUUBI_DATA_JARS="$KYUUBI_HOME/kyuubi-data-api/target"
  fi
fi

if [[ -z ${YARN_CONF_DIR} ]]; then
  KYUUBI_DATA_CLASSPATH="${KYUUBI_DATA_JARS}/*:${HADOOP_CONF_DIR}"
else
  KYUUBI_DATA_CLASSPATH="${KYUUBI_DATA_JARS}/*:${HADOOP_CONF_DIR}:${YARN_CONF_DIR}"
fi

exec ${RUNNER} ${KYUUBI_DATA_OPTS} -cp ${KYUUBI_DATA_CLASSPATH} "$@"
